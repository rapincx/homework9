.sect-header
  color #424147
  font-family bold 35px "Century Gothic"
  text-transform uppercase
  margin-bottom 27px
.header-desc
  color #424147
  font bold 24px "Century Gothic"
  margin-bottom 60px
#designs
  padding 90px 0
  .design-item
    position relative
    max-width 250px
    margin auto
    text-align center
    margin-bottom 10px
    .design-img
      background-color #ffea00
      height 200px
      max-height 200px
      img
        margin 44px 0 41px
      .design-img-desc
        color #000
        font bold 20px Code
        padding-bottom 11px
        margin-bottom 0
    .design-block
      background-color #414146
      padding 30px
      max-height 85px
      .design-desc
        color #fff
        font bold 13px "Century Gothic"
        margin 0
    .overlay
      position absolute
      opacity 0
      top 0
      left 0
      width 100%
      height 100%
      z-index -10
      transition all .5s
      .design-img
        img
          margin 0
          width 100%
          min-height 200px
      .design-block
        position relative
        max-height 85px
        padding 0
        .design-desc
          text-align left
          color #fff
          font bold 20px Code
          padding 17px 0 0 17px
        .design-category
          text-align right
          color #fff
          font bold 10px "Century Gothic"
          padding-right 24px
          span
            color #ffea00
        &::before
          content ''
          position absolute
          right 21px
          top -10px
          width 0
          height 0
          border-left 10px solid transparent
          border-right 10px solid transparent
          border-bottom 10px solid #414146
          clear both
    &:hover .overlay
      opacity 1
      z-index 10