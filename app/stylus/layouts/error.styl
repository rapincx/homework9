#page-content
  padding 175px 0 215px
  .error
    color #414146
    font 400 200px "Century Gothic"
    text-transform uppercase
  .error-desc
    display inline-block
    color #ffea00
    padding 0
    font bold 90px "Century Gothic"
    background-color #424146
    text-transform lowercase
    margin-bottom 50px
    &:after
      content "!"
      display inline-block
      font bold 140px/70px "Century Gothic"
      margin-left 60px
  .links
    span
      background-color #ffea00
      color #414146
      font bold 15px "Century Gothic"
      padding 12px 16px
      margin 0 20px
    .link-site
      color #ffffff
      padding 12px 16px
      background-color #000000
      font bold 15px "Century Gothic"
      &:hover
        border-bottom 3px solid #ffea00