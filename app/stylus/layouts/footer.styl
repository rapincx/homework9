#footer
  background-color #414146
  padding 30px 0 30px
  span.orange
    color #ffea00
  section
    margin-bottom 46px
  .sect-header
    color #fff
    font bold 18px "Century Gothic"
    margin-bottom 30px
  .sect-desc
    color #fff
    font bold 13px/21px "Century Gothic"
    margin-bottom 30px
  .about-learn
    background-color #000
    border-bottom 2px solid #ffea00
    padding 13px 18px
    color #fff
    font bold 15px "Century Gothic"
    transition all .5s
    &:hover
      background-color #ffea00
      color #000000
  .photo
    a
      img
        margin-bottom 5px
        width 125%
  .tweets
    .tweet-item
      margin-bottom 15px
      .tweet-text, .tweet-link
        color #fff
        font bold 13px "Century Gothic"
        margin-bottom 0
        span.orange
          color #ffea00
      .tweet-link
        text-decoration none
      .tweet-date
        color #ffea00
        font bold 8px "Century Gothic"
        margin 9px 0 0
  .social-list
    list-style none
    li.soc-icon
      display inline-block
      background #000000
      width 30px
      height 30px
      margin-right 2px
      margin-bottom 2px
      text-align center
      a
        i.fa
          line-height 30px
      &:hover
        a
          i.fa
            color #ffea00
  .contact-list
    .contact-item
      margin-bottom 19px
      .contact-icon
        display inline-block
        background-color #000000
        width 30px
        height 30px
        text-align center
        margin-right 17px
        i.fa
          line-height 30px
      .contact-data
        color #fff
        font bold 13px/21px "Century Gothic"
        margin-bottom 0
        a
          color inherit
  .form
    #mc_embed_signup
      #mce-EMAIL
        background-color transparent
        border none
        border-radius 0
        outline 0
        border-bottom 2px solid #ffea00
        width 100%
      #mc-embedded-subscribe
        margin-top 4px
        margin-left -38px
        width 28px
        height 28px
        background-color #000000
        text-align center
        cursor pointer
  [type=color], [type=date], [type=datetime-local], [type=datetime], [type=email], [type=month], [type=number], [type=password], [type=search], [type=tel], [type=text], [type=time], [type=url], [type=week], textarea
    box-shadow none
#footer-copy
  max-height 70px
  background-color #000
  .copy
    color #fff
    font bold 14px "Century Gothic"
    margin-bottom 0
  nav#main-nav
    ul.menu
      li
        a
          color #ffffff
          padding 26px 10px
        &.active
          a
            background-color #ffea00
            color #000000
        &:hover
          background-color #ffea00
          a
            color #000000